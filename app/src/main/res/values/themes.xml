        <item name="colorPrimary">@color/pokemon_yellow</item>
    </style>

    <style name="samaco_24sp_bold">
        <item name="fontFamily">@font/binggrae_samanco_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="samaco_16sp">
        <item name="fontFamily">@font/binggrae_samanco</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="samaco_16sp_bold">
        <item name="fontFamily">@font/binggrae_samanco_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="samaco_12sp_bold">
        <item name="fontFamily">@font/binggrae_samanco_bold</item>
